<div class="row">
  <div class="col-12 col-sm-6 offset-sm-3">

    <div class="card">
      <div class="card-header bg-primary text-light">
        Formulario de Categoria
      </div>
      <div class="card-body">

        <form method="POST" action="/admin/{{#if editMode}}edit-category{{else}}add-category{{/if}}">
          <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" {{#if editMode}} value="{{category.name}}" {{/if}} class="form-control" id="name" name="Name" required />
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Descripcion</label>
            <textarea type="text" {{#if editMode}} value="{{category.name}}" {{/if}} class="form-control" id="description" name="Description" required /></textarea>
          </div>
        {{#if editMode}}
          <input type="hidden" value="{{category.id}}" name="CategoryId">
        {{/if}}

          <button type="submit" class="btn btn-primary float-end">Save</button>
           <a href="/admin/categories" class="btn btn-warning float-end me-2">Back to list</a>
        </form>
      </div>
    </div>
  </div>
</div>