{{#if hasBooks}}

<h1>Book list</h1>

<div class="row mx-auto mt-4">
  <table class="table table-hover table-bordered rounded-3">
    <thead class="table-dark">
      <tr class="text-center">
        <th scope="col">Titulo</th>
        <th scope="col">Categoria</th>
        <th scope="col">AÃ±o</th>
        <th scope="col">Autor</th>
        <th scope="col">Editorial</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each books}}
      <tr class="align-middle">
        <th scope="row" class="text-center">{{this.title}}</th>
        <td class="text-center">{{this.category.name}}</td>
        <td class="text-center">{{this.year}}</td>
        <td class="text-center">{{this.author.name}}</td>
        <td class="text-center">{{this.editorial.name}}</td>
        <td>
          <a href="/book-detail/{{this.id}}" class="btn btn-primary d-flex justify-content-center">Details</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>



{{else}}

<h1>No books found!</h1>

{{/if}}